# /etc/anacrontab: configuration file for anacron

# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
HOME=/home/{{ user }}
LOGNAME={{ user }}

# These replace cron's entries
1   5   cron.daily  run-parts --report ~{{ user }}/.local/etc/cron.daily
7   10  cron.weekly run-parts --report ~{{ user }}/.local/etc/cron.weekly
@monthly    15  cron.monthly    run-parts --report ~{{ user }}/.local/etc/cron.monthly
